{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "MongoDbSetting": {
    "ConnectionString": "mongodb://127.0.0.1:27017",
    "DatabaseName": "POSServiceDB"
  },

  "CacheSettings": {
    "CacheDurationMinutes": 5,
    "CacheEnable": false
  },

  "Jwt": {
    "Issuer": "XPlan.Sample",
    "Audience": "XPlan.Sample",
    "Secret": "this_is_a_very_long_secret_key_of_32_chars!"
  },

  "ProtectedApis": [
    {
      "Path": "/Management/{key}"
    }
  ]
}
